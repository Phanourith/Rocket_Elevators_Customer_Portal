@model IEnumerable<Elevator>
    @{ Layout = "_Layout"; }

    <h2>All Elevators</h2>
 

    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Elevator Type</th>
                <th>Serial Number</th>
                <th>Status</th>
                <th>Intervention Request</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
            <tr>
                
                <td>@r.id</td>
                <td>@r.elevator_type</td>
                <td>@r.serial_number</td>
                <td>@r.status.ToUpper()</td>
                <td>
                <a asp-controller="Home" asp-action="ElevatorIntervention" asp-route-id="@r.id">
                        <button type="button">New Request</button>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
